{
  "name": "workflow-engine-mono",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.19",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format ./{apps,packages}",
    "format:fix": "biome format --write ./{apps,packages}",
    "check-types": "turbo run check-types"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "zod": "^4.0.5",
      "@orpc/contract": "^1.7.4",
      "@orpc/openapi": "^1.7.4",
      "@orpc/server": "^1.7.4",
      "@orpc/zod": "^1.7.4",
      "@orpc/openapi-client": "^1.7.4"
    }
  }
}
