{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": ["build/**"]
    },
    "check-types": {
      "cache": true,
      "persistent": false
    }
  }
}
