{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "@db/*": ["./src/db/*"],
      "@lib/*": ["./src/lib/*"],
      "@engine/*": ["./src/engine/*"],
      "@modules/*": ["./src/modules/*"],
      "@/*": ["./src/*"]
    }
  }
}
